<ul class="Advertisement"> 
    <div class="row my-3">
        <% Object.values(car).forEach(function(car){%>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="/detail/<%= car.carid%>"><img class="card-img-top" src="/uploads/<%= car.image %>" width = "200" alt ="/pic/noimage.jpg" onerror="this.onerror=null; this.src='/pic/noimage.jpg';" /></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/detail/<%= car.carid%>"><%= car.brand +' '+car.model %></a>
                        </h4>
                        <h5>Price <%= car.price%> $</h5>
                        <p class="card-text"><%= car.description %></p>
                    </div>
                    <div class="productButton">
                        <button type="button" class="buy">Buy</button>
                    </div>
                </div>
            </div>
        <% }) %>
      </div>
</ul>