<!DOCTYPE HTML>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- <link rel="stylesheet" href="/css/detail.css"> -->
        <title>ABC USED CAR</title>
    </head> 

    <body>
        <header>
            <h1>ABC USED CAR</h1>
            <h3>Admin Product Management History</h3>
        </header>
        <!-- Navigation Links -->
        <nav>
            <a href="/">Home</a>
            <a href="javascript:history.back()">Back</a> <!-- หาพวก syntax ที่กลับไปหน้าเดิม--> 
            <a href="/userManagementOverview">User Management</a>
            <a href="/productManagement">Product Management</a>
            <form action="/form-search" method="get">
                <input type="text" id="search" name="productSearch" placeholder="Search Product">
                <button type="submit">Search</button>
            </form>
        </nav>
    
        <!-- History -->
     <div class="car-list">
        <% car.forEach(function(car) { %> 
            <div class="car">
                <% if(car.image){ %>
                    <img src = "/uploads/<%= car.image %>" width = "100" />
                <% } else{ %>
                  <p>No image</p>
                <% } %>
                <p><%= car.brand +' '+ car.model %></p> 
                <div class="actions">
                    <button class="delete" aria-label="Delete <%= car.model %>">Delete</button>
                </div>
            </div>
        <% }); %>
        </div>
    </body>
</html>