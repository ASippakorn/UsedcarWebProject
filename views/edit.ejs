<!DOCTYPE html>
<html lang="en">


<head>
    

    <title>ABC USED CAR </title>
    <div class="header">
        <h1>ABC USED CAR</h1>
        <h2>Edit - Product</h2>
    </div>

</head>

<body>
    <nav> 
        <%- include('partials/nav') %> <%# navigation %>
    </nav> 
    <a href="/productManagementHistory">Product history</a><br>


    <div class="form-container">
        <form action ="/edit/<%= car.carid %>" method ="POST" enctype="multipart/form-data"> <!-- enctype for upload file-->
            <div class="image-preview">Picture</div>
                <!-- Image area-->

                <label for="image">Image</label>
                <% if(car.image) { %>
                    <img src="uploads/<%= car.image %>" width="100" />
                    <input type = "hidden" name ="oldImage" value="<%= car.image %>"> 
                <% } %>
                <input type="file" name="image">

            <!-- <div class="form-group">
                <label for="brand">brand</label>
                <select name="brand" id="brand">
                  <option value="b">BUGATTI</option>
                  <option value="k">KOENIGSSEG</option>
                  <option value="p">PORSCHE</option>
                  <option value="f">FERRARI</option>
                </select>
            </div> -->

            <div class="form-group">
                <label for="model">Model</label>
                <input type="text" id="model" name="model" value="<%= car.model %>">
            </div>

            <div class="form-group">
                <label for="mileage">Mileage</label>
                <input type="number" id="mileage" name="mileage" value="<%= car.mileage %>">
            </div>

            <div class="form-group">
                <label for="year">Year</label>
                <input type="number" id="year" name="year" value="<%= car.year %>">
            </div>

            <div class="form-group">
                <label for="description">Condition</label>
                <input type="text" id="description" name="description" value="<%= car.description %>">
            </div>

            <div class="form-group">
                <label for="fuel">Fuel type</label>
                <input type="fuel" id="fuel" name="fuel" value="<%= car.fuel %>">
            </div>

            <div class="form-group">
                <label for="insurance">Insurance</label>
                <input type="text" id="insurance" name="insurance" value="<%= car.insurance %>">
            </div>

            <!-- <div class="form-group">
                <label for="type">Type of car:</label>
                <select name="car" id="car">
                  <option value="sport">SPORT CAR</option>
                  <option value="super">SUPER CAR</option>
                  <option value="hyper">HYPER CAR</option>
                  <option value="suv">SUV</option>
                </select>
            </div> -->

            <div class="form-group">
                <label for="engine">Engine</label>
                <input type="text" id="engine" name="engine" value="<%= car.engine %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" name="price" value="<%= car.price %>">
            </div>
            <button class="submit-btn">Save</button>
        </form>
    </div>

</body>

</html>