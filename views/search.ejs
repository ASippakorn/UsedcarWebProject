    <script>
        // Get model element and buttons
        const model = document.getElementById("carmodel");
        const openmodelBtn = document.getElementById("openmodel");
        const closemodelBtn = document.getElementById("closemodel");
    
        // Open model on button click
        openmodelBtn.addEventListener("click", () => {
            model.style.display = "block";
        });
    
        // Close model on close button click
        closemodelBtn.addEventListener("click", () => {
            model.style.display = "none";
        });
    
        // Close model if clicked outside the model content
        window.addEventListener("click", (event) => {
            if (event.target === model) {
                model.style.display = "none";
            }
        });
    </script>
    

